{
  "name": "basically",
  "version": "0.1.0",
  "description": "Simple Pre Styled React Components",
  "main": "dist/index.js",
  "repository": "git@github.com:verypossible/basically.git",
  "author": "Very",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "generate": "node ./utils/generate.js",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "precommit": "yarn test && yarn lint",
    "start": "start-storybook -p 9001",
    "test": "jest"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.4.8",
    "@storybook/addon-knobs": "^3.4.8",
    "@storybook/react": "4.0.0-alpha.3",
    "@types/enzyme": "^3.1.11",
    "@types/jest": "^23.1.1",
    "@types/react": "^16.4.1",
    "@types/react-dom": "^16.0.6",
    "@types/storybook__addon-knobs": "^3.3.1",
    "@types/storybook__react": "^3.0.7",
    "awesome-typescript-loader": "^5.2.0",
    "chalk": "^2.4.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-environment-enzyme": "^6.0.2",
    "jest-enzyme": "^6.0.2",
    "jest-styled-components": "^5.0.1",
    "react-docgen-typescript-loader": "^2.1.1",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/storybook__addon-info": "^3.2.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "styled-components": "^3.3.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(test|spec).tsx?$",
    "moduleDirectories": [
      "<rootDir>/components",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "setupTestFrameworkScriptFile": "./enzyme.setup.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint"
    }
  }
}
