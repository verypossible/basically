{
  "baseUrl": "types",
  "typeRoots": ["types"],
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["es2015", "es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@basically/*": ["packages/*"]
    }
  },
  "include": ["index.ts", "packages/**/*", "packages/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
