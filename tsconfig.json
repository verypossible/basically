{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["es2015", "es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": "./index.ts"
  },
  "include": [
    "index.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "utils/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
